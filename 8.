#include <stdio.h>

int main() {
    int num, digit, sum = 0;
    printf("Enter any number: ");
    scanf("%d", &num);
    // loop through each digit and add it to the sum
    for ( ; num > 0; num /= 10) {
        digit = num % 10;
        sum += digit;
    }
    printf("Sum of digits: %d\n", sum);
    return 0;
}
output:Enter any number: 1234
Sum of digits: 10
