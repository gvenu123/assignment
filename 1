#include <stdio.h>

int main() {
   int num;

   printf("Enter a number: ");
   scanf("%d", &num);

   if(num > 0) {
      printf("%d is positive.", num);
   }
   else if(num < 0) {
      printf("%d is negative.", num);
   }
   else {
      printf("The entered number is zero.");
   }

   return 0;
}
Output :
Enter a number: 23
23 is positive.
